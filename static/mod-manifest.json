{
    "apiVersion": "1.2",
    "version": "1.1.1",
    "name": "Bump Chart",
    "id": "bump-chart",
    "icon": "icon.svg",
    "properties": [
        {
            "name":"columnLabelOrientation",
            "type":"string",
            "defaultValue":"Horizontal"
        }
    ],
    "dataViewDefinition": {
        "axes": [
            {
                "name": "Line By",
                "mode": "categorical",
                "placement": "none",
                "dropTarget": {
                    "icon": "Line",
                    "description": "Line by {0}"
                }
            },
            {
                "name": "Period",
                "mode": "categorical",
                "placement": "top",
                "dropTarget": {
                    "icon": "XAxis",
                    "description": "Period by {0}"
                }
            },
            {
                "name": "Ranking",
                "mode": "categorical",
                "placement": "left",
                "dropTarget": {
                    "icon": "YAxis",
                    "description": "Rank by {0}"
                }
            }
        ],
        "colorAxis": {
            "mode": "dual",
            "automaticConfiguration": {
                "expressionHeuristics":"none",
                "priority":0
            },
            "dropTarget": {
                "icon": "Color",
                "description": "Color by {0}"
            }
        }
    },
    "files": [
        "index.html",
        "main.css",
        "bundle.js"
    ]
}